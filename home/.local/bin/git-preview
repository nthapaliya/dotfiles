#!/bin/bash

set -e
git log \
  --color \
  --pretty=format:'%Cred%h %C(yellow)%an%Creset %s %Cgreen(%cr)' \
  "$@" |\
fzf \
  --ansi \
  --bind 'tab:execute[git show --color {1} | diff-so-fancy | less --tabs=4 -RX > /dev/tty]' \
  --no-sort \
  --nth 2.. \
  --with-nth=2.. \
  --preview 'git show --color {1} | head -80 | diff-so-fancy' \
  --preview-window=down:80% \
  --reverse |\
awk '{ print $1 }'

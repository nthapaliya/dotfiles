# frozen_string_literal: true

# vim: set ft=ruby:

history_file = File.join(Dir.home, '.local', 'share', 'irb', 'history')
Pry.config.history_file = history_file

# TODO: make this work independent of OSS gemfile
require 'rb-readline'

def RbReadline.rl_reverse_search_history(_sign, _key)
  rl_insert_text `grep -v exit #{history_file} | fzf --tac |  tr '\n' ' '`
end

def pbcopy(input)
  str = input.to_s
  IO.popen('pbcopy', 'w') { |f| f << str }
end

def reload
  # puts "reloading #{__FILE__}"

  warn_level = $VERBOSE

  # This is to suppress the annoying already initialized constant warnings
  $VERBOSE = nil

  load __FILE__

  $VERBOSE = warn_level

  true
end

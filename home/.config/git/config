[user]
	name = Niraj Thapaliya
	email = nthapaliya@users.noreply.github.com
[push]
	default = simple
	followTags = true
[core]
	ignorecase = false
	quotepath = false
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
	aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /' | sort
	assume = update-index --assume-unchanged
	assumed = !git ls-files -v | grep ^h | cut -c 3-
	branch-name = rev-parse --abbrev-ref HEAD
	conflict = diff --name-only --diff-filter=U
	ctags = !.git/hooks/ctags-run
	patch = !git --no-pager diff --no-color
	publish = !git push -u origin $(git branch-name)
	purge = "!f() { local gcb=$(git branch-name) && git branch --merged \"$gcb\" | grep -v master | grep -v \"$gcb\" | xargs git branch -d ; } ; f"
	unassume = update-index --no-assume-unchanged
	unique = log HEAD --not master
	up = "!git remote update -p; git merge --ff-only @{u}"
	who = "!f() { git log --format=%an \"$@\" | sort | uniq -c | sort -rn ; }; f"
[init]
	templatedir = ~/.config/git/template
[status]
	showUntrackedFiles = all
[stash]
	showPatch = true
[diff]
	indentHeuristic = on
	renamelimit = 10000
[commit]
	verbose = true
[rebase]
	autosquash = true
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[user]
	name = Niraj Thapaliya
	email = nthapaliya@users.noreply.github.com
[push]
	default = simple
	followTags = true
[core]
	ignorecase = false
	quotepath = false
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
	aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /' | sort
	ctags = !.git/hooks/ctags-run
	patch = !git --no-pager diff --no-color
	preview = "!f() { git log --color --pretty=format:'%Cred%h %C(yellow)%an%Creset %s %Cgreen(%cr)' \"$@\" | fzf --nth 2.. --no-sort --ansi --reverse --preview 'git show --color {1} | diff-so-fancy' --preview-window=down:80% | awk '{ print $1 }' ; } ; f"
	unique = log HEAD --not master
	up = "!git remote update -p; git merge --ff-only @{u}"
[init]
	templatedir = ~/.config/git/template
[status]
	showUntrackedFiles = all
[stash]
	showPatch = true
[diff]
	indentHeuristic = on
	renamelimit = 10000
[commit]
	verbose = true
[rebase]
	autosquash = true
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = yellow
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

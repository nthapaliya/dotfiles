def change_log(stream)
  Rails.logger = Logger.new(stream)
  ActiveRecord::Base.logger = Logger.new(stream)
  ActiveRecord::Base.clear_active_connections!
  ActionController::Base.logger = Logger.new STDOUT
end

def show_log
  change_log(STDOUT)
  nil
end

def hide_log
  change_log(nil)
  nil
end


# zshrc

export DOTFILES_PATH=$HOME/.dotfiles
export ZSH=$DOTFILES_PATH/zsh/oh-my-zsh

ZSH_THEME='lambda'

# Set case sensitivity
# CASE_SENSITIVE="true"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# plugins=(git ruby tmux osx bundler)
plugins=(git ruby rake-fast tmux osx safe-paste golang z)

PATH=/usr/local/bin:$PATH

# export ZSH_TMUX_AUTOSTART=true
source $ZSH/oh-my-zsh.sh

# You may need to manually set your language environment
export LANG=en_US.UTF-8

# User configuration
setopt HIST_IGNORE_ALL_DUPS


export rvm_ignore_dotfiles=yes

# as per zsh-install notes
unalias run-help
autoload run-help
HELPDIR=/usr/local/share/zsh/help

export GOPATH=$HOME/Lang/go

PATH=$PATH:$HOME/.dotfiles/bin
# PATH=$PATH:$GOPATH/bin
# PATH=$PATH:/usr/local/opt/go/libexec/bin

source $DOTFILES_PATH/zsh/alias

# anaconda is installed here
ANACONDA_PATH=$HOME/Lang/anaconda
if [ -d "$ANACONDA_PATH" ]; then
  PATH=$PATH:$HOME/.local/bin:$ANACONDA_PATH/bin
fi

if [ -z "$COMPATIBILITY" ]; then
  source $DOTFILES_PATH/zsh/promptline.sh
else
  # To make FZF not try to open a tmux split, because of
  # incompatibilityes with tmate
  # export FZF_TMUX=0
  # source $DOTFILES_PATH/zsh/promptline_compat.sh
fi

export USE_RVM=1
if [ $USE_RVM ]; then
  [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
else
  export PATH=$HOME/.rbenv/bin:$PATH
  eval "$(rbenv init -)"
fi

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
